<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Property Stages (like CRM pipeline) -->
        <record id="stage_new" model="estate.property.stage">
            <field name="name">New</field>
            <field name="sequence">10</field>
        </record>

        <record id="stage_offer" model="estate.property.stage">
            <field name="name">Offer Received</field>
            <field name="sequence">20</field>
        </record>

        <record id="stage_under_contract" model="estate.property.stage">
            <field name="name">Offer Accepted</field>
            <field name="sequence">30</field>
        </record>

        <record id="stage_won" model="estate.property.stage">
            <field name="name">Sold</field>
            <field name="sequence">40</field>
            <field name="is_won">True</field>
        </record>

        <record id="stage_lost" model="estate.property.stage">
            <field name="name">Canceled</field>
            <field name="sequence">50</field>
            <field name="is_lost">True</field>
            <field name="fold">True</field>
        </record>
    </data>
</odoo>
