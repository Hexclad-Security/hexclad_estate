<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Property Stages (like CRM pipeline) -->
        <record id="stage_new" model="estate.property.stage">
            <field name="name">New Lead</field>
            <field name="sequence">10</field>
        </record>

        <record id="stage_qualified" model="estate.property.stage">
            <field name="name">Qualified</field>
            <field name="sequence">20</field>
        </record>

        <record id="stage_offer" model="estate.property.stage">
            <field name="name">Offer Made</field>
            <field name="sequence">30</field>
        </record>

        <record id="stage_negotiation" model="estate.property.stage">
            <field name="name">Negotiation</field>
            <field name="sequence">40</field>
        </record>

        <record id="stage_under_contract" model="estate.property.stage">
            <field name="name">Under Contract</field>
            <field name="sequence">50</field>
        </record>

        <record id="stage_won" model="estate.property.stage">
            <field name="name">Closed Won</field>
            <field name="sequence">60</field>
            <field name="is_won">True</field>
        </record>

        <record id="stage_lost" model="estate.property.stage">
            <field name="name">Lost</field>
            <field name="sequence">70</field>
            <field name="is_lost">True</field>
            <field name="fold">True</field>
        </record>
    </data>
</odoo>
