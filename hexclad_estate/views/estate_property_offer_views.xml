<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- ESTATE PROPERTY OFFER VIEWS -->
    <!-- ============================================================ -->

    <!-- Form View -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <header>
                    <button name="action_accept" type="object" string="Accept"
                            class="oe_highlight"
                            invisible="state != 'pending'"/>
                    <button name="action_refuse" type="object" string="Refuse"
                            invisible="state != 'pending'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Offer Details">
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="property_id"/>
                        </group>
                        <group string="Validity">
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers"
                  decoration-success="state == 'accepted'"
                  decoration-danger="state == 'refused'">
                <field name="property_id"/>
                <field name="property_type_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'accepted'"
                       decoration-warning="state == 'pending'"
                       decoration-danger="state == 'refused'"/>
                <button name="action_accept" type="object" icon="fa-check" title="Accept"
                        invisible="state != 'pending'"/>
                <button name="action_refuse" type="object" icon="fa-times" title="Refuse"
                        invisible="state != 'pending'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="estate_property_offer_view_search" model="ir.ui.view">
        <field name="name">estate.property.offer.search</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search string="Search Offers">
                <field name="property_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter name="filter_pending" string="Pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_accepted" string="Accepted"
                        domain="[('state', '=', 'accepted')]"/>
                <filter name="filter_refused" string="Refused"
                        domain="[('state', '=', 'refused')]"/>
                <separator/>
                <filter name="group_by_property" string="Property"
                        context="{'group_by': 'property_id'}"/>
                <filter name="group_by_state" string="Status"
                        context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No offers yet
            </p>
            <p>
                Offers will appear here when buyers make offers on properties.
            </p>
        </field>
    </record>

</odoo>
