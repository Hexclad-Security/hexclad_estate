<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- MAIN MENUS -->
    <!-- ============================================================ -->

    <!-- Root Menu -->
    <menuitem id="estate_menu_root"
              name="Real Estate"
              sequence="10"
              web_icon="hexclad_estate,static/description/icon.png"/>

    <!-- Properties Menu -->
    <menuitem id="estate_menu_properties"
              name="Properties"
              parent="estate_menu_root"
              sequence="10"/>

    <!-- Properties Action Menu -->
    <menuitem id="estate_menu_properties_all"
              name="All Properties"
              parent="estate_menu_properties"
              action="estate_property_action"
              sequence="10"/>

    <!-- Offers Action Menu -->
    <menuitem id="estate_menu_offers"
              name="Offers"
              parent="estate_menu_properties"
              action="estate_property_offer_action"
              sequence="20"/>

    <!-- Settings Menu (Manager only) -->
    <menuitem id="estate_menu_settings"
              name="Settings"
              parent="estate_menu_root"
              sequence="90"
              groups="hexclad_estate.estate_group_manager"/>

    <!-- Property Types -->
    <menuitem id="estate_menu_property_types"
              name="Property Types"
              parent="estate_menu_settings"
              action="estate_property_type_action"
              sequence="10"/>

    <!-- Property Tags -->
    <menuitem id="estate_menu_property_tags"
              name="Property Tags"
              parent="estate_menu_settings"
              action="estate_property_tag_action"
              sequence="20"/>

    <!-- Utilities -->
    <menuitem id="estate_menu_property_utilities"
              name="Utilities"
              parent="estate_menu_settings"
              action="estate_property_utility_action"
              sequence="25"/>

    <!-- Property Stages -->
    <menuitem id="estate_menu_property_stages"
              name="Stages"
              parent="estate_menu_settings"
              action="estate_property_stage_action"
              sequence="30"/>

</odoo>
