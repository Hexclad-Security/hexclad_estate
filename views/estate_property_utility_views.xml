<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Utility Tags -->
    <record id="estate_property_utility_view_tree" model="ir.ui.view">
        <field name="name">estate.property.utility.tree</field>
        <field name="model">estate.property.utility</field>
        <field name="arch" type="xml">
            <list string="Utilities">
                <field name="name"/>
                <field name="color"/>
            </list>
        </field>
    </record>

    <record id="estate_property_utility_view_form" model="ir.ui.view">
        <field name="name">estate.property.utility.form</field>
        <field name="model">estate.property.utility</field>
        <field name="arch" type="xml">
            <form string="Utility">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_utility_action" model="ir.actions.act_window">
        <field name="name">Utilities</field>
        <field name="res_model">estate.property.utility</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
