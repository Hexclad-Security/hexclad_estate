<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- ESTATE PROPERTY VIEWS -->
    <!-- ============================================================ -->

    <!-- Form View -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_offer_received" type="object" string="Offer Received"
                            class="oe_highlight"
                            invisible="state in ['offer_received', 'offer_accepted', 'sold', 'canceled']"/>
                    <button name="action_offer_accepted" type="object" string="Offer Accepted"
                            class="oe_highlight"
                            invisible="state in ['offer_accepted', 'sold', 'canceled']"/>
                    <button name="action_sold" type="object" string="Sold"
                            class="oe_highlight"
                            invisible="state in ['sold', 'canceled']"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state in ['sold', 'canceled']"/>
                    <button name="action_reset" type="object" string="Reset"
                            invisible="state not in ['canceled']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_website"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-globe"
                                invisible="not website_published">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Go to Website</span>
                            </div>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Property Title..."/>
                        </h1>
                        <div class="estate_property_tags">
                            <span class="o_form_label">Tags</span>
                            <br/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color'}"
                                   placeholder="Add tags..."/>
                        </div>
                    </div>
                    <group string="Website Listing" class="estate_website_listing">
                        <field name="website_published" widget="boolean_toggle" string="Publish on Website"/>
                        <div class="o_form_label text-muted estate_publish_help">
                            Toggle this on and save to publish the listing on the website. Use “Go to Website”
                            above to preview once published.
                        </div>
                    </group>
                    <group>
                        <group string="Basic Info">
                            <field name="property_type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group string="Pricing">
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description" placeholder="Describe the property..."/>
                            </group>
                            <group string="Address">
                                <group>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                </group>
                                <group>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                    <field name="postcode"/>
                                </group>
                            </group>
                            <group string="Property Details">
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="bathrooms"/>
                                    <field name="living_area"/>
                                    <field name="lot_size"/>
                                    <field name="utility_ids" widget="many2many_tags"
                                           options="{'color_field': 'color'}"
                                           placeholder="Add utilities..."/>
                                    <field name="survey_complete"/>
                                    <field name="flood_zone"/>
                                </group>
                                <group>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Investment Analysis" name="investment">
                            <group string="Flip Analysis">
                                <group>
                                    <field name="purchase_price"/>
                                    <field name="arv"/>
                                    <field name="rehab_cost"/>
                                </group>
                                <group>
                                    <field name="closing_costs"/>
                                    <field name="holding_costs"/>
                                    <field name="potential_profit"/>
                                    <field name="roi_percentage" widget="percentage"/>
                                </group>
                            </group>
                            <group string="Rental Analysis">
                                <group>
                                    <field name="monthly_rent"/>
                                    <field name="monthly_expenses"/>
                                </group>
                                <group>
                                    <field name="monthly_cash_flow"/>
                                    <field name="annual_cash_flow"/>
                                    <field name="cap_rate" widget="percentage"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers" name="offers">
                            <field name="offer_ids">
                                <list string="Offers" editable="bottom" decoration-success="state == 'accepted'" decoration-danger="state == 'refused'">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name="state" readonly="1"/>
                                    <button name="action_accept" type="object" icon="fa-check" title="Accept"
                                            invisible="state != 'pending'"/>
                                    <button name="action_refuse" type="object" icon="fa-times" title="Refuse"
                                            invisible="state != 'pending'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Images" name="images">
                            <field name="image_ids" mode="kanban,tree" context="{'default_property_id': id}">
                                <kanban class="o_kanban_small_column">
                                    <field name="image_1920"/>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="o_kanban_record">
                                                <div class="o_kanban_image">
                                                    <field name="image_1920" widget="image" class="o_kanban_image_fill"/>
                                                </div>
                                                <div class="o_kanban_details">
                                                    <field name="name" placeholder="Image description..."/>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="image_1920" widget="image"/>
                                </list>
                            </field>
                        </page>
                        <page string="Other Info" name="other">
                            <group>
                                <group string="Assignment">
                                    <field name="user_id"/>
                                    <field name="buyer_id"/>
                                </group>
                                <group string="Dates">
                                    <field name="date_created"/>
                                    <field name="date_availability"/>
                                </group>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_view_form_utilities_inline" model="ir.ui.view">
        <field name="name">estate.property.form.utilities.inline</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate_property_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='utility_ids']" position="replace"/>
            <xpath expr="//field[@name='survey_complete']" position="replace"/>
            <xpath expr="//field[@name='flood_zone']" position="replace"/>
            <xpath expr="//field[@name='lot_size']" position="after">
                <field name="utility_ids" widget="many2many_tags"
                       options="{'color_field': 'color'}"
                       placeholder="Add utilities..."/>
                <field name="survey_complete"/>
                <field name="flood_zone"/>
            </xpath>
        </field>
    </record>

    <!-- Tree View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties"
                  decoration-success="state == 'offer_accepted'"
                  decoration-bf="state == 'offer_accepted'"
                  decoration-muted="state == 'sold'"
                  decoration-danger="state == 'canceled'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="city"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="user_id" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'offer_accepted'"
                       decoration-info="state in ['new', 'offer_received']"
                       decoration-warning="state == 'sold'"
                       decoration-danger="state == 'canceled'"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="city"/>
                <field name="property_type_id"/>
                <field name="user_id"/>
                <field name="buyer_id"/>
                <separator/>
                <filter name="filter_available" string="Available"
                        domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <filter name="filter_offer_received" string="Offer Received"
                        domain="[('state', '=', 'offer_received')]"/>
                <filter name="filter_sold" string="Sold"
                        domain="[('state', '=', 'sold')]"/>
                <separator/>
                <filter name="filter_my_properties" string="My Properties"
                        domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="group_by_type" string="Property Type"
                        context="{'group_by': 'property_type_id'}"/>
                <filter name="group_by_state" string="Status"
                        context="{'group_by': 'state'}"/>
                <filter name="group_by_user" string="Salesperson"
                        context="{'group_by': 'user_id'}"/>
                <filter name="group_by_city" string="City"
                        context="{'group_by': 'city'}"/>
                <separator/>
                <filter name="hide_assignee" string="Hide Assignee"
                        context="{'show_assignee': 0}"/>
                <filter name="hide_tags" string="Hide Tags"
                        context="{'show_tags': 0}"/>
                <filter name="hide_activity" string="Hide Activities"
                        context="{'show_activity': 0}"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_mobile" on_create="quick_create" quick_create_view="hexclad_estate.estate_property_view_form_quick_create">
                <field name="stage_id"/>
                <field name="state"/>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="user_id"/>
                <field name="tag_ids"/>
                <field name="image"/>
                <field name="city"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_record o_kanban_record_has_image">
                            <div class="o_kanban_image estate_kanban_image">
                                <field name="image" widget="image" class="o_kanban_image_fill"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_primary_left">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_subtitle">
                                        <span t-if="record.property_type_id.value">
                                            <field name="property_type_id"/>
                                        </span>
                                        <span t-if="record.city.value">
                                            <t t-if="record.property_type_id.value"> • </t>
                                            <field name="city"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_primary_right estate_kanban_assignee"
                                     t-if="!context || context.show_assignee !== false">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="o_kanban_tags_section"
                                     t-if="!context || context.show_tags !== false">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <span t-if="!record.tag_ids.raw_value || !record.tag_ids.raw_value.length"
                                          class="o_text_muted estate_kanban_tag_placeholder">
                                        Add tag
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom"
                                     t-if="!context || context.show_activity !== false">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Quick Create Form for Kanban -->
    <record id="estate_property_view_form_quick_create" model="ir.ui.view">
        <field name="name">estate.property.form.quick_create</field>
        <field name="model">estate.property</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" placeholder="Property Title..."/>
                    <field name="property_type_id" placeholder="Property Type..."/>
                    <field name="expected_price" placeholder="Expected Price..."/>
                    <field name="city" placeholder="City..."/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property listing!
            </p>
            <p>
                Add properties to manage your real estate portfolio.
            </p>
        </field>
    </record>

</odoo>
