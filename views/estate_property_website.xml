<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="estate_property_listing" name="Properties">
        <t t-call="website.layout">
            <t t-set="title">Properties</t>
            <t t-set="state_map" t-value="dict(state_selection)"/>
            <div class="container my-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0">Properties</h1>
                </div>
                <form method="get" class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label">Property Type</label>
                        <select name="type_id" class="form-select">
                            <option value="">All Types</option>
                            <t t-foreach="property_types" t-as="ptype">
                                <option t-att-value="ptype.id" t-att-selected="ptype.id == selected_type_id">
                                    <t t-esc="ptype.name"/>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <select name="state" class="form-select">
                            <option value="">All Statuses</option>
                            <t t-foreach="state_selection" t-as="state_item">
                                <option t-att-value="state_item[0]" t-att-selected="state_item[0] == selected_state">
                                    <t t-esc="state_item[1]"/>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Filter</button>
                        <a href="/properties" class="btn btn-outline-secondary">Reset</a>
                    </div>
                </form>
                <div class="row g-4">
                    <t t-if="properties">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 shadow-sm">
                                    <a t-att-href="property.website_url" class="text-decoration-none">
                                        <t t-if="property.image_ids">
                                            <img t-att-src="'/web/image/estate.property.image/%s/image_1920' % property.image_ids[0].id"
                                                 class="card-img-top" t-att-alt="property.name"/>
                                        </t>
                                        <t t-elif="property.image">
                                            <img t-att-src="'/web/image/estate.property/%s/image' % property.id"
                                                 class="card-img-top" t-att-alt="property.name"/>
                                        </t>
                                        <t t-else="">
                                            <div class="bg-light d-flex align-items-center justify-content-center"
                                                 style="height: 220px;">
                                                <span class="text-muted">No image</span>
                                            </div>
                                        </t>
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a t-att-href="property.website_url" class="text-decoration-none text-dark">
                                                <t t-esc="property.name"/>
                                            </a>
                                        </h5>
                                        <p class="card-text text-muted mb-2">
                                            <t t-esc="property.property_type_id.name or ''"/> • <t t-esc="property.city or ''"/>
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-semibold">$<t t-esc="property.expected_price"/></span>
                                            <span class="badge bg-secondary">
                                                <t t-esc="state_map.get(property.state)"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div class="col-12">
                            <div class="alert alert-info">No properties found.</div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="estate_property_detail" name="Property Detail">
        <t t-call="website.layout">
            <t t-set="title" t-value="property.name"/>
            <div class="container my-5 estate-property-detail">
                <t t-set="state_map" t-value="state_selection or {}"/>
                <t t-set="address_parts"
                   t-value="[property.street or '', property.street2 or '', property.city or '', property.state_id.name if property.state_id else '', property.country_id.name if property.country_id else '', property.postcode or '']"/>
                <div class="row g-4">
                    <div class="col-lg-4 estate-portal-sidebar">
                        <div class="card shadow-sm mb-4 estate-detail-card estate-agent-card">
                            <div class="card-body">
                                <div class="estate-card-header">Agent / Sales Rep</div>
                                <t t-set="agent_name" t-value="property.user_id.name or 'Assigned Agent'"/>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="estate-agent-avatar me-3">
                                        <t t-if="property.user_id and property.user_id.partner_id.image_128">
                                            <img t-att-src="'/web/image/res.partner/%s/image_128' % property.user_id.partner_id.id"
                                                 t-att-alt="agent_name"/>
                                        </t>
                                        <t t-else="">
                                            <span class="estate-agent-placeholder">
                                                <t t-esc="agent_name[:1]"/>
                                            </span>
                                        </t>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">
                                            <t t-esc="agent_name"/>
                                        </div>
                                        <t t-if="property.user_id.partner_id.email">
                                            <div class="text-muted">
                                                <a t-att-href="'mailto:%s' % property.user_id.partner_id.email">
                                                    <t t-esc="property.user_id.partner_id.email"/>
                                                </a>
                                            </div>
                                        </t>
                                        <t t-if="property.user_id.partner_id.phone">
                                            <div class="text-muted">
                                                <a t-att-href="'tel:%s' % property.user_id.partner_id.phone">
                                                    <t t-esc="property.user_id.partner_id.phone"/>
                                                </a>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4 estate-detail-card estate-inquiry-card" id="property-inquiry">
                            <div class="card-body">
                                <div class="estate-card-header">Request More Information</div>
                                <form method="post" t-att-action="'/properties/%s/inquiry' % property.id">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" name="name" class="form-control" required="required"/>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control" required="required"/>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Phone</label>
                                        <input type="text" name="phone" class="form-control"/>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Message</label>
                                        <textarea name="message" class="form-control" rows="3"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Send Inquiry</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/properties">Properties</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    <t t-esc="property.name"/>
                                </li>
                            </ol>
                        </nav>
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-start mb-4">
                            <div>
                                <h1 class="mb-2"><t t-esc="property.name"/></h1>
                                <div class="text-muted">
                                    <t t-esc="property.property_type_id.name or ''"/>
                                    <t t-if="property.city">
                                        • <t t-esc="property.city"/>
                                    </t>
                                </div>
                            </div>
                            <span class="badge bg-secondary estate-status-badge mt-2 mt-md-0">
                                <t t-esc="state_map.get(property.state, property.state)"/>
                            </span>
                        </div>

                        <div class="card shadow-sm mb-4 estate-detail-card estate-price-card">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Sale Information</h5>
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <div class="text-muted">Asking Price</div>
                                        <div class="estate-price">
                                            <t t-esc="formatted_expected_price"/>
                                        </div>
                                    </div>
                                </div>
                                <ul class="list-unstyled mb-0 estate-detail-list">
                                    <li>
                                        <span class="text-muted">Property Type</span>
                                        <span class="fw-semibold"><t t-esc="property.property_type_id.name or '—'"/></span>
                                    </li>
                                    <li>
                                        <span class="text-muted">Address</span>
                                        <span class="fw-semibold">
                                            <t t-esc="', '.join([part for part in address_parts if part]) or '—'"/>
                                        </span>
                                    </li>
                                    <t t-if="property.date_availability">
                                        <li>
                                            <span class="text-muted">Available From</span>
                                            <span class="fw-semibold">
                                                <span t-field="property.date_availability"/>
                                            </span>
                                        </li>
                                    </t>
                                    <t t-if="formatted_best_price">
                                        <li>
                                            <span class="text-muted">Best Offer</span>
                                            <span class="fw-semibold"><t t-esc="formatted_best_price"/></span>
                                        </li>
                                    </t>
                                </ul>
                                <div class="d-flex flex-column flex-sm-row gap-2 mt-4">
                                    <a class="btn btn-primary flex-fill" href="#property-inquiry">
                                        Schedule a tour
                                    </a>
                                    <a class="btn btn-outline-primary flex-fill" href="#property-inquiry">
                                        Request info
                                    </a>
                                </div>
                                <t t-if="property.tag_ids">
                                    <div class="mt-4">
                                        <div class="text-muted mb-2">Tags</div>
                                        <div class="d-flex flex-wrap gap-2 estate-pill-list">
                                            <t t-foreach="property.tag_ids" t-as="tag">
                                                <span class="badge rounded-pill text-bg-light estate-tag estate-pill">
                                                    <t t-esc="tag.name"/>
                                                </span>
                                            </t>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4 estate-gallery" data-gallery="property">
                            <div class="estate-gallery__mosaic">
                                <t t-if="property.image_ids">
                                    <div class="estate-gallery__mosaic-main">
                                        <button type="button"
                                                class="estate-gallery__mosaic-item estate-gallery__mosaic-item--main"
                                                t-att-data-gallery-index="0"
                                                t-att-data-full-src="'/web/image/estate.property.image/%s/image_1920' % property.image_ids[0].id"
                                                t-att-aria-label="'View image %s' % 1">
                                            <img class="estate-gallery__mosaic-image"
                                                 t-att-src="'/web/image/estate.property.image/%s/image_1920' % property.image_ids[0].id"
                                                 t-att-alt="property.image_ids[0].name or property.name"/>
                                        </button>
                                        <button type="button"
                                                class="estate-gallery__view-all"
                                                t-att-data-gallery-index="0"
                                                aria-label="View all photos">
                                            <i class="fa fa-th" aria-hidden="true"></i>
                                            <span>View all photos</span>
                                            <t t-if="len(property.image_ids)">
                                                <span class="estate-gallery__view-count">
                                                    (<t t-esc="len(property.image_ids)"/>)
                                                </span>
                                            </t>
                                        </button>
                                    </div>
                                    <div class="estate-gallery__mosaic-grid">
                                        <t t-foreach="property.image_ids" t-as="image" t-foreach-index="index">
                                            <t t-if="index &gt; 0 and index &lt; 5">
                                                <button type="button"
                                                        class="estate-gallery__mosaic-item"
                                                        t-att-data-gallery-index="index"
                                                        t-att-data-full-src="'/web/image/estate.property.image/%s/image_1920' % image.id"
                                                        t-att-aria-label="'View image %s' % ((index or 0) + 1)">
                                                    <img class="estate-gallery__mosaic-image"
                                                         t-att-src="'/web/image/estate.property.image/%s/image_1920' % image.id"
                                                         t-att-alt="image.name or property.name"/>
                                                </button>
                                            </t>
                                        </t>
                                    </div>
                                </t>
                                <t t-elif="property.image">
                                    <div class="estate-gallery__mosaic-main">
                                        <button type="button"
                                                class="estate-gallery__mosaic-item estate-gallery__mosaic-item--main"
                                                t-att-data-gallery-index="0"
                                                t-att-data-full-src="'/web/image/estate.property/%s/image' % property.id"
                                                t-att-aria-label="'View image %s' % 1">
                                            <img class="estate-gallery__mosaic-image"
                                                 t-att-src="'/web/image/estate.property/%s/image' % property.id"
                                                 t-att-alt="property.name"/>
                                        </button>
                                        <button type="button"
                                                class="estate-gallery__view-all"
                                                t-att-data-gallery-index="0"
                                                aria-label="View all photos">
                                            <i class="fa fa-th" aria-hidden="true"></i>
                                            <span>View all photos</span>
                                        </button>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="estate-gallery__placeholder" aria-label="No images available">
                                        <span class="text-muted">No images available</span>
                                    </div>
                                </t>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4 estate-detail-card">
                            <div class="card-body">
                                <h5 class="card-title">Description</h5>
                                <p class="text-muted mb-0">
                                    <t t-esc="property.description or 'No description provided.'"/>
                                </p>
                            </div>
                        </div>

                        <t t-set="has_features"
                           t-value="property.bedrooms or property.bathrooms or property.living_area or property.lot_size or property.garage is not None"/>
                        <t t-if="has_features">
                            <div class="card shadow-sm mb-4 estate-detail-card estate-feature-card">
                                <div class="card-body">
                                    <h5 class="card-title">Key facts</h5>
                                    <div class="estate-key-facts">
                                        <t t-if="property.bedrooms">
                                            <div class="estate-key-fact">
                                                <span class="estate-key-fact__label">Bedrooms</span>
                                                <span class="estate-key-fact__value"><t t-esc="property.bedrooms"/></span>
                                            </div>
                                        </t>
                                        <t t-if="property.bathrooms">
                                            <div class="estate-key-fact">
                                                <span class="estate-key-fact__label">Bathrooms</span>
                                                <span class="estate-key-fact__value"><t t-esc="property.bathrooms"/></span>
                                            </div>
                                        </t>
                                        <t t-if="property.living_area">
                                            <div class="estate-key-fact">
                                                <span class="estate-key-fact__label">Living Area</span>
                                                <span class="estate-key-fact__value">
                                                    <t t-esc="property.living_area"/> sqft
                                                </span>
                                            </div>
                                        </t>
                                        <t t-if="property.lot_size">
                                            <div class="estate-key-fact">
                                                <span class="estate-key-fact__label">Lot Size</span>
                                                <span class="estate-key-fact__value"><t t-esc="property.lot_size"/> sqft</span>
                                            </div>
                                        </t>
                                        <t t-if="property.garage is not None">
                                            <div class="estate-key-fact">
                                                <span class="estate-key-fact__label">Garage</span>
                                                <span class="estate-key-fact__value">
                                                    <t t-if="property.garage">Yes</t>
                                                    <t t-else="">No</t>
                                                </span>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>

                    </div>
                </div>
                <div class="estate-lightbox" aria-hidden="true" role="dialog" aria-modal="true">
                    <div class="estate-lightbox__backdrop" data-lightbox-close="true"></div>
                    <div class="estate-lightbox__content" role="document">
                        <button type="button" class="estate-lightbox__close" aria-label="Close image gallery">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="estate-lightbox__nav estate-lightbox__prev" aria-label="Previous image">
                            <i class="fa fa-chevron-left" aria-hidden="true"></i>
                        </button>
                        <img class="estate-lightbox__image" alt="Property image preview"/>
                        <button type="button" class="estate-lightbox__nav estate-lightbox__next" aria-label="Next image">
                            <i class="fa fa-chevron-right" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="estate_property_inquiry_thanks" name="Property Inquiry Thanks">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Thank you for your inquiry!</h4>
                    <p>We have received your message about <strong><t t-esc="property.name"/></strong>.</p>
                    <hr/>
                    <p class="mb-0">Our team will be in touch shortly.</p>
                </div>
                <a class="btn btn-outline-primary" t-att-href="property.website_url">Back to property</a>
            </div>
        </t>
    </template>
</odoo>
